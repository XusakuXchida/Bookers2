<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render "layouts/user_info", user: @user %>
      <%= render "layouts/new_book", book: @book %>
    </div>

    <div class='col-md-8 offset-md-1'>
      <h2>Book detail</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user) do %>
                <%= attachment_image_tag @user, :profile_image, fallback: "no-image-icon.jpg", class: "attachment user profile_image fallback" %></br>
                <%= @user.name %>
              <% end %>
            </td>
            <td><%= link_to @book_show.title, book_path(@book_show) %></td>
            <td><%= @book_show.body %></td>
            <% if @user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book_show), class: "btn btn-sm btn-success" %></td>
              <td><%= link_to "Destroy", book_path(@book_show), method: :delete, class: "btn btn-sm btn-danger", data: {confirm: "本当に消しますか？"} %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
